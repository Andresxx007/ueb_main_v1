{
  "name": "Flutter Dev",
  "build": { "dockerfile": "Dockerfile" },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ],
      "settings": {
        "dart.flutterSdkPath": "/opt/flutter",
        "dart.sdkPath": "/opt/flutter/bin/cache/dart-sdk"
      }
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.android,target=/home/vscode/.android,type=bind"
  ],
  "postCreateCommand": "flutter doctor"
}
